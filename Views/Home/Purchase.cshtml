        <header class="header">
            <h1 class="header-title">Buy Now!</h1>
            <nav class="navigation">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Guide", "Home")">Guide</a></li>
